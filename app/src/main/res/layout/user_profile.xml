<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_beige"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context=".UserProfile">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:elevation="20dp"
        android:background="@drawable/backarrow_icon"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@id/user_profile_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="back"/>


    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair_extrabold"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060" />

    <TextView
        android:id="@+id/app_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/content_font"
        android:text="Your Skincare Library"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_title" />


    <!-- user profile area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_profile_header"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="25dp"
        android:elevation="20dp"
        android:background="@drawable/irregular_shape2"
        android:backgroundTint="@color/coral"
        app:layout_constraintTop_toBottomOf="@id/app_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/user_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon2"
            app:tint="@color/dark_dusty_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="user icon"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="USERNAME"
            android:textSize="20sp"
            android:fontFamily="@font/playfair_extrabold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_profile_icon"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="email@gmail.com"
            android:textSize="15sp"
            android:fontFamily="@font/playfair_extrabold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintStart_toEndOf="@id/user_profile_icon"/>

        <TextView
            android:id="@+id/change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Change Password"
            android:textColor="@color/dark_dusty_brown"
            android:textStyle="italic"
            android:fontFamily="@font/playfair_extrabold"
            app:layout_constraintStart_toEndOf="@id/user_profile_icon"
            app:layout_constraintTop_toBottomOf="@id/email"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- user profile edit area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_marginTop="15dp"
        android:elevation="20dp"
        android:background="@drawable/irregular_shape1"
        android:backgroundTint="@color/light_pink"
        app:layout_constraintTop_toBottomOf="@id/user_profile_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/username_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="USERNAME"
            android:fontFamily="@font/proximanova_extrabold"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/username_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="48dp"
            android:hint="Enter username here"
            android:autofillHints="username"
            android:inputType="text"
            android:fontFamily="@font/subtitle_font"
            android:textSize="15sp"
            android:textAlignment="center"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_edit_title" />

        <TextView
            android:id="@+id/age_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="AGE"
            android:fontFamily="@font/proximanova_extrabold"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_edit"/>

        <EditText
            android:id="@+id/age_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="48dp"
            android:fontFamily="@font/subtitle_font"
            android:hint="Enter age here"
            android:textAlignment="center"
            android:inputType="number"
            android:textSize="15sp"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/age_edit_title" />

        <TextView
            android:id="@+id/gender_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="35dp"
            android:text="GENDER"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/proximanova_extrabold"
            app:layout_constraintTop_toBottomOf="@id/age_edit"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/gender_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gender_edit_title"
            app:layout_constraintStart_toStartOf="parent">

          <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:text="Male"
            android:fontFamily="@font/proximanova_extrabold"
            android:textSize="18sp"/>

          <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Female"
            android:fontFamily="@font/proximanova_extrabold"
            android:textSize="18sp" />

          <RadioButton
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Others"
            android:fontFamily="@font/proximanova_extrabold"
            android:textSize="18sp"/>

        </RadioGroup>


        <ImageButton
            android:id="@+id/save_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="55dp"
            android:padding="15dp"
            android:background="@drawable/round_rectangle"
            android:src="@drawable/save_icon"
            android:scaleType="fitCenter"
            app:tint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/age_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="save profile"/>

        <TextView
            android:id="@+id/save_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Save"
            android:fontFamily="@font/playfair_extrabold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/save_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>