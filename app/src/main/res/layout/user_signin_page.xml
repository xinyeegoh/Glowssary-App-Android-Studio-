<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@color/light_beige"
    android:focusable="true"
    tools:context=".UserSignIn">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:elevation="20dp"
        android:background="@drawable/backarrow_icon"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="back"/>

    <!-- user sign in area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="app logo" />


        <EditText
            android:id="@+id/email_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minWidth="200dp"
            android:minHeight="48dp"
            android:hint="email"
            android:textSize="15sp"
            android:fontFamily="@font/proximanova_extrabold"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/app_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:autofillHints="emailAddress" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="48dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/proximanova_extrabold"
            android:hint="password  "
            android:autofillHints="password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_edit" />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textStyle="italic"
            android:textAllCaps="false"
            android:background="@color/light_beige"
            android:fontFamily="@font/content_font"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/password_edit"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/signin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minWidth="140dp"
            android:elevation="20dp"
            android:text="SIGN IN"
            android:fontFamily="@font/proximanova_extrabold"
            android:textSize="15sp"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/beige_pink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forgot_password"/>

        <!-- Google / Facebook sign in area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/google_fb_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/signin_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR "
                android:fontFamily="@font/proximanova_extrabold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/google_signin_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/white"
                android:src="@drawable/google_logo"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/or"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="google sign in"/>

            <ImageButton
                android:id="@+id/facebook_signin_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/light_yellow"
                android:src="@drawable/fb_logo"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/google_signin_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="facebook sign in"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>